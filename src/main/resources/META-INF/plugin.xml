<idea-plugin>
    <id>io.github.devcrema.mockk-template-generator</id>
    <name>Mockk-Template-Generator</name>
    <vendor email="devcrema@gmail.com" url="https://github.com/devcrema">devcrema</vendor>

    <description><![CDATA[
    create mockk template for object like spring component.<br>
    ]]></description>

    <!-- please see https://plugins.jetbrains.com/docs/intellij/plugin-compatibility.html
         on how to target different products -->
    <depends>com.intellij.modules.platform</depends>
    <depends>org.jetbrains.kotlin</depends>

    <extensions defaultExtensionNs="com.intellij">
        <!-- Add your extensions here -->
        <localInspection implementationClass="io.github.devcrema.mockkTemplateGenerator.MockkGeneratorInspection"
                         groupPath="Kotlin"
                         groupName="Mockk template"
                         enabledByDefault="true"
                         level="INFORMATION"
                         language="kotlin"
                         displayName="Mockk template"/>
    </extensions>


</idea-plugin>